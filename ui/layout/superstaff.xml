<UILayout name="Super Staff Screen">
   <UIRegion x="0" y="0" w="1024" h="768" xalign="min" yalign="min" walign="len" halign="len"/>
   <UIState active="normal" visible="normal"/>
   <UIAspect alwayshit="never">
      <default/>
   </UIAspect>
   <children>
      <UIText name="Super Staff Message">
         <UIRegion x="0" y="-40" w="1024" h="50"/>
         <UIState active="normal" visible="hidden"/>
         <UIAspect alwayshit="never">
            <default>
               <BFFont align="center">
                  <BFColor r="255" g="255" b="0" a="255"/>
               </BFFont>
            </default>
            <standard>
               <normal sound="super_staff"/>
            </standard>
         </UIAspect>
         <UIShowHideAnim time=".3">
            <start x="0" y="-40" w="-1" h="-1"/>
            <end x="0" y="55" w="-1" h="-1"/>
         </UIShowHideAnim>
         <text format="superstaff:format"/>
      </UIText>
   </children>
</UILayout>
